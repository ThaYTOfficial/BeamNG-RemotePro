<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF"> <!-- Ripple Color (Semi-transparent White) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Background (Black) -->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" /> <!-- Border (White) -->
            <corners android:radius="4dp" /> <!-- Slight rounded corners -->
            <padding
                android:bottom="12dp"
                android:left="24dp"
                android:right="24dp"
                android:top="12dp" />
        </shape>
    </item>
</ripple>
