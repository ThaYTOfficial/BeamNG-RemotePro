<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.beamng.udpsteering.WelcomeActivity">

    <!-- Header Section with Logo -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/white_circle"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"
                android:alpha="0.9" />
        </FrameLayout>

        <TextView
            android:id="@+id/titleMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="RemotePro"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.05"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-thin"
            android:text="Reimagined Remote Control App for BeamNG"
            android:textColor="#FFFFFF"
            android:alpha="0.6"
            android:letterSpacing="0.2"
            android:textSize="9sp"
            android:textAllCaps="true" />
    </LinearLayout>

    <!-- Instructions Card -->
    <LinearLayout
        android:id="@+id/instructionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Guide"
            android:textColor="#FFFFFF"
            android:alpha="0.4"
            android:textSize="9sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="1. Open BeamNG.drive\n   Options → Controls → Hardware"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="2. Enable 'OutGauge UDP'\n   IP: (Use the IP below)\n   Port: 4444"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Click 'Connect Controller'\n   Scan the QR Code to Link"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif-light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#20FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/ipAddressInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="192.168.1.XX"
            android:textColor="#FF9800"
            android:letterSpacing="0.1"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium" />
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Local Network IP"
            android:textColor="#FFFFFF"
            android:alpha="0.3"
            android:textSize="8sp"
            android:layout_marginTop="4dp"
            android:textAllCaps="true" />

    </LinearLayout>

    <!-- Steering Mode (Moved Down) -->
    <LinearLayout
        android:id="@+id/modeSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/instructionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steering Mode"
            android:textColor="#FFFFFF"
            android:alpha="0.4"
            android:textSize="9sp"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/steeringModeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mode90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90° Standard"
                android:textColor="#FFFFFF"
                android:buttonTint="#FF9800"
                android:layout_marginEnd="32dp"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light" />

            <RadioButton
                android:id="@+id/mode360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="360° Pro"
                android:textColor="#FFFFFF"
                android:buttonTint="#FF9800"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light" />

        </RadioGroup>
    </LinearLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/buttonScan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/btn_remote_pro"
        android:onClick="onScanClick"
        android:text="Connect Controller"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

